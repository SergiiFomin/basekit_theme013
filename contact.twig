{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <div class="global">

        <!--header-->
        <header>

            <div class="header">
                <div class="header-top">
                    <div class="header-bottom">

                        <div class="container">

                            <div class="row">

                                <article class="span12">

                                    {{widget('space', 'space', {'height': '30'})|raw}}
                                    {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                                    {{widget('space', 'space', {'height': '30'})|raw}}

                                    <div class="nav">

                                        <div class="row">
                                            <article class="span9">

                                                {{widget('navigation', 'navigation', {'align': 'left'})|raw}}

                                            </article>
                                            <article class="span3">

                                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}

                                            </article>
                                        </div>

                                    </div>

                                </article>

                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </header>

        <!--content-->

        <div class="contentInner">

            <div class="container">

                <div class="row">

                    <section class="span12">
                                
                        {{widget('content', 'title2', {content: '<h3>Contact Form</h3>', lines: 'all'})|raw}}

                        {{zone('main')|raw}}
                                
                        {{widget('map', 'map', {'height': '300', 'zoom': '15', 'address': 'profile'})|raw}}

                        {{widget('space', 'space', {'height': '30'})|raw}}

                    </section>

                </div>

            </div>

        </div>

        <!--footer-->
        <footer>

            <div class="container">

                <div class="row">

                    <section class="span12">

                        <div class="row">

                            <article class="span12">

                                {{widget('image', 'flogo', { 'src': asset('images/flogo.png'), 'imageWidth': '276px'})|raw}}
                                {{widget('profile', 'copyright', { 'profileType':'copyright' })|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                        </div>

                    </section>

                </div>

            </div>

        </footer>

    </div>
    
</div>

{% endblock %}